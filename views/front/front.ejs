<html>
    <title>Frontpage</title>
<%- include('../partials/head') %>

<body>
    <%- include('../partials/nav', {user: locals.user}) %>
    <%- include('../partials/jumbotron', {name: "Frontpage"}) %>
    <span id="auth"><%= isAuth %></span>

    <div class="grid-container">
        <div class="sidebar subarea edit-area">
            <div class="area-overlap actions">
                <%- include('../partials/sidebar_index_actions') %>
            </div>
            <div class="subscribed">
            <%- include('../partials/sidebar_index_subscribed', {isAuth, subscribed}) %>
            <%- include('../partials/sidebar_index_subreddits', {subreddits}) %>
            </div>
        </div>

        <div class="main">
                <% if (posts != undefined) { 
                    posts.forEach((post) => { %>
            <article data-ref="<%= post._id %>">
                <div class="arrows">
                    <% if(locals.isauth) { %>
                        <% if(post.states[0] != undefined) { %>
                            <% if(post.states[0].vote == "up") { %>
                                <div class="upvote-post auth-req  up-enabled"><i class="far fa-caret-square-up"></i></div> 
                                <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                                <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>
                            <% } else if (post.states[0].vote == "down") { %>
                                <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
                                <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                                <div class="downvote-post auth-req  down-enabled"><i class="far fa-caret-square-down"></i></div>
                            <% } else { %>
                                <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
                                <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                                <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>
                            <% } %>
                            
                        <% } else {%>
                            <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
                            <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                            <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>
                        <% } %>
                    <% } else { %>
                        <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
                        <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                        <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>
                    <% } %>

                </div>

                <% if(post.type == "img") { %>
                <a href="<%=post.link%>"><img src="<%=post.link%>" height="55" width="55" class="thumbnail"></a>
                <% } else if (post.type == "link") { %>
                <a href="<%=post.link%>"><img src="/images/link.png" height="55" width="55" class="thumbnail"></a>
                <% } else { %>
                <a href="<%=post.link%>"><img src="/images/post.png" height="55" width="55" class="thumbnail"></a>
                <% } %>

                <div class="info">
                    <header>
                        <% if(post.type == "post") { %>
                        <a href="/r/<%= post.subreddit %>/<%= post._id %>"><%= post.title %></a>
                        <%  } else { %>
                        <a href="<%= post.link %>"><%= post.title %></a>
                        <% } %>

                    </header>
                    <div>
                        submitted <time title="<%= post.time %>">-</time>
                        by <span><a href="/u/<%= post.username %>"><%= post.username %></a></span>
                        from <span><a href="/r/<%= post.subreddit %>">/r/<%= post.subreddit %></a></span>
                    </div>
                    <ul>
                        <li><a href="/r/<%=post.subreddit %>/<%= post._id %>">comments</a></li>

                        <% if(locals.isauth) { %>
                            <% if(post.states[0] != undefined) { %>
                                <% if(post.states[0].saved === true) { %>
                                <li><a href="javascript:void(0)" class="save-post auth-req">unsave</a></li>
                            <% } else { %>
                                <li><a href="javascript:void(0)" class="save-post auth-req">save</a></li>
                                <% } %>
                            <% } else { %>
                                <li><a href="javascript:void(0)" class="save-post auth-req">save</a></li>
                            <% } %>
                            <% if(post.username == locals.user) { %>
                                <li><a href="/r/<%=post.subreddit%>/<%= post._id %>" class="edit-comment auth-req">edit</a></li>
                                <li><a href="javascript:void(0)" class="delete-post auth-req">delete</a></li>
                            <% } %>
                        <% } else { %>
                            <li><a href="javascript:void(0)" class="save-post auth-req">save</a></li>
                        <% } %>

                    </ul>
                </div>
            </article>
            <% });%>
            <% } else { %>
            There are no posts.
            <% } %>
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script src="/js/index.js"></script>
        <script src="/js/post.js"></script>

</body>

</html>