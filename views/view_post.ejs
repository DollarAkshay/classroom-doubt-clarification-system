<html>
<% include partials/head %>

<body>
    <% include partials/nav %>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center" id="subreddit-name">
                <%= name %>
            </h1>
        </div>
    </div>

    <div class="grid-container">
        <div class="sidebar subarea edit-area">
            <div class="area-overlap actions">
                <% include partials/sidebar_actions %>
            </div>

            <div class="subscribed">
                <% include partials/sidebar_subscribed %>
            </div>
        </div>

        <div class="main">
            <div class="submit-wrapper">
                <article>
                    <div id="info">
                        <div class="arrows">
                            <i class="far fa-caret-square-up" id="up"></i>
                            <span id="votes">
                                <%= post.votes %></span>
                            <i class="far fa-caret-square-down" id="down"></i>
                        </div>
                        <header>
                            <%= post.title %>
                        </header>
                        submitted <span>
                            <%= post.time %></span> by <span>
                            <%= post.username %></span>
                    </div><br>
                    <p class="border border-primary">
                        <%= post.body %>
                    </p>
                </article>
            </div>
            <h1> Comments </h1>
            <div class="submit-wrapper">
                <form action="/r/<%=name%>/<%= post._id %>/comments/submit" method="post">
                    <textarea class="form-control" name="comment" rows="3" placeholder="Comment here ..." required
                        maxlength="150"></textarea>
                    <br>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>

            </div>
</body>

</html>