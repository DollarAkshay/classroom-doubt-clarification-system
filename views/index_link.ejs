<html>
    <title>Frontpage</title>
<% include partials/head %>

<body>
    <% include partials/nav %>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center" id="subreddit-name">Frontpage</h1>
        </div>
    </div>

    <div class="grid-container">
        <div class="sidebar subarea edit-area">
            <div class="area-overlap actions">
                <input class="form-control block" placeholder="Search for post"><br>
                <a class="btn btn-block btn-success" href="/submit/link" id="submit-link">Submit new link</a><br>
                <a class="btn btn-block btn-primary" href="/submit/post" id="submit-post">Submit new post</a><br>
                <a class="btn btn-block btn-light" href="/submit/subreddit" id="create-subreddit">Create subreddit</a><br>
            </div>
            <div class="subscribed">
                    <h3>Subscribed</h3>
                    <table class="table table-striped">
                        <tbody>
                <% if (subscribed != undefined) { 
                    subscribed.forEach((sub) => { %>
                        <tr>
                        <td><a href="/r/<%= sub %>">/r/<%= sub %></a></td>
                        </tr>                    
                    <% }); %>
                    <% } else { %>
                    You are not subscribed to any subreddit
                    <% } %>
                </tbody>
            </table>
            </div>
        </div>

        <div class="main">
            <h3>new link</h3>
            <div class="submit-wrapper">
                <% if(!locals.user) { %>
                    You must be logged in to submit a post / link / subreddit.
                <% } else { %>
                <form action="/submit/link" method="post">
                    <input type="text" class="form-control" name="title" placeholder="Enter title" required><br>
                    <input type="text" class="form-control" name="link" placeholder="Enter link" required><br>
                    <input type="text" class="form-control" name="subreddit" placeholder="Enter subreddit" required><br>

                    <button type="submit" class="btn btn-primary" id="link-submit-button">Submit</button>
                </form>
                <% } %>

            </div>
        </div>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script src="/js/index.js"></script>

</body>

</html>