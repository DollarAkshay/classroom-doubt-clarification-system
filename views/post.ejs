<html>
    <title><%= info.name %></title>
    <%- include('partials/head') %>

<body>
    <%- include('partials/nav', {user: locals.user}) %>
    <%- include('partials/jumbotron', {name: info.name}) %>
    <span id="auth"><%= isAuth %></span>

    <div class="grid-container">
            <div class="sidebar subarea edit-area">
                <div class="area-overlap actions">
                    <%- include('partials/sidebar_subreddit_actions', {name: info.name}) %>
                 </div>
    
                <div class="subscribed">
                    <%- include('partials/sidebar_subreddit_info', {desc: info.description}) %>
                </div>
            </div>

        <div class="main">
            <div class="comment-wrapper">
                <article data-ref="<%= post._id %>">
                    <div class="arrows">
                            <% if(locals.isauth) { %>
                                <% if(postStates != undefined) { %>
                                    <% if(postStates.vote == "up") { %>
                                        <div class="upvote-post auth-req  up-enabled"><i class="far fa-caret-square-up"></i></div> 
                                        <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                                        <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>
                                    <% } else if (postStates.vote == "down") { %>
                                        <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
                                        <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                                        <div class="downvote-post auth-req  down-enabled"><i class="far fa-caret-square-down"></i></div>
                                    <% } else { %>
                                        <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
                                        <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                                        <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>
                                    <% } %>
                                    
                                <% } else {%>
                                    <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
                                    <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                                    <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>
                                <% } %>
                            <% } else { %>
                                <div class="upvote-post auth-req"><i class="far fa-caret-square-up"></i></div> 
                                <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                                <div class="downvote-post auth-req"><i class="far fa-caret-square-down"></i></div>
                            <% } %>
                    </div>

                    <div class="info">
                        <header>
                            <% if(post.type == "post") { %>
                            <a href="/r/<%= post.subreddit %>/<%= post._id %>"><%= post.title %></a>
                            <%  } else { %>
                            <a href="<%= post.link %>"><%= post.title %></a>
                            <% } %>
                        </header>

                        <div>
                            submitted <time title="<%= post.time %>">-</time>
                            by <span><a href="/u/<%= post.username %>"><%= post.username %></a></span>
                            from <span><a href="/r/<%= post.subreddit %>">/r/<%= post.subreddit %></a></span>
                        </div>

                        <p class="border border-primary"><% if(post.type == "post") { %><%= post.body %><%  } else { %><%= post.link %><% } %></p>
                        <ul>
                            <% if(locals.isauth) { %>
                                <% if(postStates != undefined) { %>
                                    <% if(postStates.saved === true) { %>
                                        <li><a href="javascript:void(0)" class="save-post auth-req">unsave</a></li>
                                    <% } else { %>
                                        <li><a href="javascript:void(0)" class="save-post auth-req">save</a></li>
                                    <% } %>
                                <% } else { %>
                                    <li><a href="javascript:void(0)" class="save-post auth-req">save</a></li>
                                <% } %>

                                <% if(post.username == locals.user) { %>
                                    <li><a href="javascript:void(0)" class="edit-post auth-req">edit</a></li>
                                    <li><a href="javascript:void(0)" class="delete-post auth-req">delete</a></li>
                                <% } %>
                            <% } %>
                        </ul>

                    </div>
                </article>
            </div>

            <h3> Comments </h3>
            <div class="submit-wrapper">
                <% if(!isAuth) { %>
                    You must be <a href="/login">logged in</a> to leave a comment
                <% } else { %>
                <form action="/r/<%=info.name%>/<%= post._id %>/comments" method="post">
                    <textarea class="form-control" name="comment" rows="2" placeholder="Comment here ..." required
                        maxlength="150"></textarea><br>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
                <% }; %>
            </div>
            <hr>
            <% if (comments != undefined) { 
                    comments.forEach((comment) => { %>

            <div class="comment-wrapper">
                <article data-ref="<%= comment._id %>">
                    <ul>
                        <li><span><a href="/u/<%= comment.username %>"><%= comment.username %></a></span></li> â€¢ 
                        <li><span id="comment-votes"><%= comment.votes %></span> points</li> â€¢ 
                        <time title="<%= comment.time %>">-</time> </li>
                    </ul>
                    <div class="comment-body"><%= comment.body %></div>
                    <ul>
                        <li>
                                <% if(locals.isauth) { %>
                                    <% if(comment.states[0] != undefined) { %>
                                        <% if(comment.states[0].vote == "up") { %>
                                            <i class="far fa-caret-square-up upvote-comment auth-req up-enabled"></i>
                                            <i class="far fa-caret-square-down downvote-comment auth-req"></i>
                                        <% } else if (comment.states[0].vote == "down") { %>
                                            <i class="far fa-caret-square-up upvote-comment auth-req"></i>
                                            <i class="far fa-caret-square-down downvote-comment auth-req down-enabled"></i>
                                        <% } else { %>
                                            <i class="far fa-caret-square-up upvote-comment auth-req"></i>
                                            <i class="far fa-caret-square-down downvote-comment auth-req"></i>
                                        <% } %>
                                        
                                    <% } else {%>
                                        <i class="far fa-caret-square-up upvote-comment auth-req"></i>
                                        <i class="far fa-caret-square-down downvote-comment auth-req"></i>
                                    <% } %>
                                <% } else { %>
                                    <i class="far fa-caret-square-up upvote-comment auth-req"></i>
                                    <i class="far fa-caret-square-down downvote-comment auth-req"></i>
                                <% } %>
                        </li>   
                        <li><span><a href="javascript:void(0)" class="reply-comment auth-req">reply</a></span></li>

                        <% if(locals.isauth) { %>
                            <% if(comment.states[0] != undefined) { %>
                                <% if(comment.states[0].saved === true) { %>
                                    <li><a href="javascript:void(0)" class="save-comment auth-req">unsave</a></li>
                                <% } else { %>
                                    <li><a href="javascript:void(0)" class="save-comment auth-req">save</a></li>
                                <% } %>
                            <% } else { %>
                                <li><a href="javascript:void(0)" class="save-comment auth-req">save</a></li>
                            <% } %>
                        <% } else { %>
                        <% }  %>

                        <% if(comment.username == locals.user) { %>
                        <li><span><a href="javascript:void(0)" class="edit-comment auth-req">edit</a></span></li>
                        <li><span><a href="javascript:void(0)" class="delete-comment auth-req">delete</a></span></li>
                        <% } %>
                    </ul>
                </article>
            </div>
            <% });%>
            <% } else { %>
            There are no comments.
            <% } %>

        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.3.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/moment.js/2.22.2/moment.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/autosize@4.0.2/dist/autosize.min.js"></script>
        <script src="/js/index.js"></script>
        <script src="/js/post.js"></script>
        <script src="/js/comment.js"></script>
</body>
</html>