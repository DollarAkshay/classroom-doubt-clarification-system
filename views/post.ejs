<html>
<% include partials/head %>

<body>
    <% include partials/nav %>

    <div class="jumbotron jumbotron-fluid">
        <div class="container">
            <h1 class="display-4 text-center" id="subreddit-name">
                <%= info.name %>
            </h1>
        </div>
    </div>

    <div class="grid-container">
        <div class="sidebar subarea edit-area">
            <div class="area-overlap actions">
                <input class="form-control block" placeholder="Search for post"><br>
                <a class="btn btn-block btn-success" href="/r/<%=info.name%>/submit/link" id="submit-link">Submit new link</a><br>
                <a class="btn btn-block btn-primary" href="/r/<%=info.name%>/submit/post" id="submit-post">Submit new post</a><br>
                <a class="btn btn-block btn-light" href="/subscribe/<%=info.name%>" id="submit-post">Subscribe</a><br>
            </div>

            <div class="subscribed">
                <%- include('partials/sidebar_info', {desc: info.description}) %>
            </div>
        </div>

        <div class="main">
            <div class="comment-wrapper">

                <article data-ref="<%= post._id %>">
                    <div class="arrows">
                        <div class="upvote"><i class="far fa-caret-square-up"></i></div> 
                        <span class="votes" data-ref="<%= post._id %>"><%= post.votes %></span>
                        <div class="downvote"><i class="far fa-caret-square-down"></i></div>
                    </div>

                    <div class="info">
                        <header>
                            <% if(post.type == "post") { %>
                            <a href="/r/<%= post.subreddit %>/<%= post._id %>"><%= post.title %></a>
                            <%  } else { %>
                            <a href="<%= post.link %>"><%= post.title %></a>
                            <% } %>

                        </header>
                        submitted 
                        <time><%= post.time %></time> by 
                        <span><a href="/u/<%= post.username %>"><%= post.username %></a></span> from 
                        <span><a href="/r/<%= post.subreddit %>">/r/<%= post.subreddit %></a></span>
                        
                        <p class="border border-primary">
                                <% if(post.type == "post") { %>
                                <%= post.body %>
                                <%  } else { %>
                                <%= post.link %>
                                <% } %>
                            </p>
                    </div>
                </article>
                    
            </div>
            <h1> Comments </h1>
            <div class="submit-wrapper">
                <% if(!isAuth) { %>
                    You must be logged in to leave a comment
                <% } else { %>
                <form action="/r/<%=info.name%>/<%= post._id %>/comments" method="post">
                    <textarea class="form-control" name="comment" rows="2" placeholder="Comment here ..." required
                        maxlength="150"></textarea>
                    <br>
                    <button class="btn btn-primary" type="submit">Submit</button>
                </form>
                <% }; %>
            </div>
            <hr>
            <% if (comments != undefined) { 
                    comments.forEach((comment) => { %>

            <div class="comment-wrapper">
                <article>
                    <ul>
                        <li><span><a href="/u/<%= comment.username %>"><%= comment.username %></a></span></li> • 
                        <li><span id="comment-votes"><%= comment.votes %></span> points</li> • 
                        <li><time><%= comment.time %></time></li>
                    </ul>
                        <%= comment.body %>
                    <ul>
                         <li>
                                <i class="far fa-caret-square-up" id="comment-up"></i>
                                <i class="far fa-caret-square-down" id="comment-down"></i>
                        </li>   
                        <li><span><a href="">comment</a></span></li>
                        <li><span><a href="">save</a></span></li>

                        <% if(isAuth) { %>
                        <li><span><a href="">edit</a></span></li>
                        <li><span><a href="">delete</a></span></li>
                        <% } %>


                    </ul>
                </article>
            </div>
            <% });%>
            <% } else { %>
            There are no comments.
            <% } %>

</body>

</html>